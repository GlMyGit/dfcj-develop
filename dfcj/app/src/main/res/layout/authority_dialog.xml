<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


     <LinearLayout
         android:layout_width="280dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/custom_divider_white"
         android:layout_gravity="center"
         android:gravity="center"
         >


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/my_tx1"
             android:textSize="@dimen/textSize18sp"
             android:textColor="@color/color_414141"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginTop="15dp"
             ></TextView>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/my_tx2"
             android:textSize="@dimen/textSize16sp"
             android:textColor="@color/color_414141"
             android:gravity="center"
             android:layout_gravity="center"
             android:layout_marginTop="13dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             ></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/color_c4c4c4"
                android:layout_marginTop="15dp"
                ></View>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="46dp"
             android:orientation="horizontal"
             >

             <TextView
                 android:id="@+id/authority_tv1"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="@string/my_tx3"
                 android:textSize="@dimen/textSize16sp"
                 android:textColor="@color/color_666666"
                 android:layout_weight="1"
                 android:gravity="center"
                 ></TextView>

             <View
                 android:layout_width="0.8dp"
                 android:layout_height="match_parent"
                 android:background="@color/color_c4c4c4"
                 ></View>

             <TextView
                 android:id="@+id/authority_tv2"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="@string/my_tx4"
                 android:textSize="@dimen/textSize16sp"
                 android:textColor="@color/color_666666"
                 android:layout_weight="1"
                 android:gravity="center"
                 ></TextView>



         </LinearLayout>

     </LinearLayout>



</LinearLayout>