<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/upp_pic1"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize15sp"
            android:textColor="@color/textcolor_444444"
            android:text="正在下载中"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="159dip"
            android:visibility="visible"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <ProgressBar
                android:id="@+id/update_info_gx_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dip"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="15dip"
                android:gravity="center|left|top"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_toLeftOf="@+id/upp2_progress_tv"
                />

            <TextView
                android:id="@+id/upp2_progress_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14sp"
                android:textColor="@color/textcolor_444444"
                android:text="0%"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#e8e9ef"
            android:visibility="invisible"
            ></View>

        <TextView
            android:id="@+id/versionchecklib_loading_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="取消"
            android:textSize="@dimen/textSize16sp"
            android:textColor="@color/textcolor_444444"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            />


    </LinearLayout>



</LinearLayout>