<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58.6dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        ></View>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/unified_head_back_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingRight="25dp"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/g_pic120"
                android:layout_marginLeft="14dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="@dimen/textSize16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                />


        </LinearLayout>


        <TextView
            android:id="@+id/unified_head_back_close_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关闭"
            android:layout_toRightOf="@+id/unified_head_back_layout"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/unified_head_title_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/df_title"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize18sp" />



        <TextView
            android:id="@+id/unified_head_title_right_tx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提交"
            android:textSize="@dimen/textSize16sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_222222"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/unified_head_title_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:paddingLeft="8dp"
            android:visibility="invisible"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_03_FF000000"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>


</LinearLayout>
