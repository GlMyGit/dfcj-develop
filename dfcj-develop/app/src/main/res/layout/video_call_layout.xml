<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <data>

        <variable
            name="presenter"
            type="com.dfcj.videoim.ui.video.VideoCallingActivity.Presenter" />

    </data>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_60_FF000000"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/video_call_center_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="150dp"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_head_default_right"
                        ></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服001"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        ></TextView>


                </LinearLayout>



                <com.tencent.rtmp.ui.TXCloudVideoView
                    android:id="@+id/txcvv_main_mine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    />


                <LinearLayout
                    android:id="@+id/trtc_view_to_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:visibility="gone"
                    >

                    <com.tencent.rtmp.ui.TXCloudVideoView
                        android:id="@+id/trtc_view_to"
                        android:layout_width="90dp"
                        android:layout_height="160dp"
                        android:onClick="@{() -> presenter.videoSwitch()}"
                        />

                    <ImageView
                        android:id="@+id/video_call_meiyan_img"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/meiyan"
                        android:layout_marginTop="15dp"
                        android:onClick="@{() -> presenter.videoMeiYan()}"
                        ></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="70dp"
                    android:weightSum="2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >


                    <LinearLayout
                        android:id="@+id/video_call_close_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:onClick="@{() -> presenter.closeVideo()}"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/dianhua_pic1"
                            ></ImageView>

                        <TextView
                            android:id="@+id/video_call_close_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取消"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            ></TextView>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/video_call_qiehuan_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:onClick="@{() -> presenter.switchCamear()}"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/myuxiangji"></ImageView>

                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"

                    >

                    <RelativeLayout
                        android:id="@+id/close_act"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/suoxiao2"></ImageView>

                    </RelativeLayout>

                    <Chronometer
                        android:id="@+id/video_call_top_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:format="%s"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/video_call_top_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="等待对方接受邀请..."
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="visible"></TextView>


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/video_meiyan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:visibility="gone"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <LinearLayout
                    android:id="@+id/video_meiyan_top_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="@{() -> presenter.clickMeiYan()}"
                    >

                    <RadioButton
                        android:id="@+id/video_meiyan_top_layout_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="美颜"
                        android:textColor="@color/tab_text_font2"
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:checked="true"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@null"
                        ></RadioButton>

                    <View
                        android:id="@+id/video_meiyan_top_layout1_view"
                        android:layout_width="25dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_3D3D3D"
                        ></View>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/video_meiyan_top_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="@{() -> presenter.clickClear()}"
                    >

                    <RadioButton
                        android:id="@+id/video_meiyan_top_layout_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="清晰"
                        android:textColor="@color/tab_text_font2"
                        android:textSize="16sp"
                        android:paddingTop="10dp"
                        android:checked="true"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@null"
                        ></RadioButton>

                    <View
                        android:id="@+id/video_meiyan_top_layout2_view"
                        android:layout_width="25dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_3D3D3D"
                        android:visibility="invisible"
                        ></View>

                </LinearLayout>



            </LinearLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:id="@+id/meiyan_set_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/meiyan"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美颜"
                            android:textColor="@color/color_141414"
                            android:textSize="14sp"
                            android:layout_marginLeft="7dp"
                            ></TextView>


                        <SeekBar
                            android:id="@+id/video_meiyan_seekbar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:thumb="@drawable/seek_bar_thumb"
                            android:progressDrawable="@drawable/seek_bar_bg"
                            android:layout_gravity="center_vertical"
                            android:max="9"
                            android:progress="0"
                            ></SeekBar>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/meiyan"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="美白"
                            android:textColor="@color/color_141414"
                            android:textSize="14sp"
                            android:layout_marginLeft="7dp"
                            ></TextView>


                        <SeekBar
                            android:id="@+id/video_meiyan_seekbar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:thumb="@drawable/seek_bar_thumb"
                            android:progressDrawable="@drawable/seek_bar_bg"
                            android:layout_gravity="center_vertical"
                            android:max="9"
                            android:progress="0"
                            ></SeekBar>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/meiyan"
                            ></ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="红润"
                            android:textColor="@color/color_141414"
                            android:textSize="14sp"
                            android:layout_marginLeft="7dp"
                            ></TextView>


                        <SeekBar
                            android:id="@+id/video_meiyan_seekbar3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:thumb="@drawable/seek_bar_thumb"
                            android:progressDrawable="@drawable/seek_bar_bg"
                            android:layout_gravity="center_vertical"
                            android:max="9"
                            android:progress="0"
                            ></SeekBar>


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:id="@+id/video_call_qingxi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >


                    <RadioGroup
                        android:id="@+id/video_call_qingxi_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="5dp"
                        >


                        <com.dfcj.videoim.view.myview.CustomRadioButton
                            android:id="@+id/meiyan_qx_radio1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="360P流畅"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/a_check_bg"
                            android:button="@null"
                            android:gravity="center"
                            android:drawablePadding="15dp"
                            ></com.dfcj.videoim.view.myview.CustomRadioButton>

                        <com.dfcj.videoim.view.myview.CustomRadioButton
                            android:id="@+id/meiyan_qx_radio2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="720P高清"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:button="@null"
                            android:drawableStart="@drawable/a_check_bg"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:drawablePadding="15dp"
                            ></com.dfcj.videoim.view.myview.CustomRadioButton>

                        <com.dfcj.videoim.view.myview.CustomRadioButton
                            android:id="@+id/meiyan_qx_radio3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="1080P超清"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:drawablePadding="15dp"
                            android:drawableStart="@drawable/a_check_bg"
                            ></com.dfcj.videoim.view.myview.CustomRadioButton>



                    </RadioGroup>




                </LinearLayout>




            </RelativeLayout>








            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >


                <LinearLayout
                    android:id="@+id/video_meiyan_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="28dp"
                    android:paddingBottom="15dp"
                    android:onClick="@{() -> presenter.closeVideoMeiYan()}"
                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tuichu"></ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:text="退出"
                        android:textColor="@color/color_141414"
                        android:textSize="14sp"

                        ></TextView>

                </LinearLayout>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>



        </LinearLayout>



    </FrameLayout>



</layout>